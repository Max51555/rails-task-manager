<div class="container">
  <div class="main text-center">
    <h2 class="text-center"><%= @task.title %></h2>
    <p><%= @task.details %></p>
    <p>done?</p>
    <% if @task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>


    <p><%= link_to "back to all tasks", tasks_path  %></p>
    <div class="form-group">
      <div class="btn btn-warning text-decoration-none text-white">
        <%= link_to "edit", edit_task_path %>
      </div>
      <div class="btn btn-warning text-decoration-none">
        <%= link_to "destroy", destroy_task_path(@task), method: :delete %>
      </div>
    </div>
  </div>
</div>
